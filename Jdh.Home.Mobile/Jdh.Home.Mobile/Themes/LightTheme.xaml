<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Jdh.Home.Mobile.Themes.LightTheme">
    <Style TargetType="BoxView" x:Key="PrismDialogMaskStyle">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    <Color x:Key="PageBackgroundColor">White</Color>
    <Color x:Key="NavigationBarColor">#0477da</Color>
    <Color x:Key="PrimaryColor">#0477da</Color>
    <Color x:Key="SecondaryColor">#8304da</Color>
    <Color x:Key="PrimaryTextColor">Black</Color>
    <Color x:Key="SecondaryTextColor">White</Color>
    <Color x:Key="TertiaryTextColor">Gray</Color>
    <Color x:Key="ButtonPrimaryTextColor">White</Color>
    <Color x:Key="TransparentColor">Transparent</Color>
    <!-- Pallete -->
    <!-- ReSharper disable once InconsistentNaming -->
    <Color x:Key="primary-back-title-color">#0477da</Color>
    <!-- ReSharper disable once InconsistentNaming -->
    <Color x:Key="primary-title-color">Black</Color>
    <!-- Pallete-end -->
    <Style ApplyToDerivedTypes="true" TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource Key=primary-back-title-color}"/>
        <Setter Property="BarTextColor" Value="{StaticResource Key=primary-title-color}"/>
    </Style>
</ResourceDictionary>